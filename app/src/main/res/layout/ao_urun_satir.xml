<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="411dp"
        android:layout_height="182dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ao_imageView_fotogoster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ao_txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ürün Adı"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/ao_txt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ürün Açıklaması"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/ao_txt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ürün Fiyatı"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/ao_txt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ürün Tipi"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/ao_txt5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ürün Bilgisi"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/ao_txt6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Favori"
                android:textSize="17dp" />

            <Button
                android:id="@+id/ao_btn_siparis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sipariş Ver" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>